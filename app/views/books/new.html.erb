<%= link_to 'My本棚に戻る' , root_path %>

<div class="content">
  <div id="search_box">
    <%= form_tag new_book_path, method: :get do %>
      <%= text_field_tag :book, "", id: "book_search", name: "title", placeholder: "タイトルを打ち込んでください", style: "width: 250px;"%>
  
      <button title="検索" type="submit">検索</button>
    <% end %>
  </div>
  
  <div id="book_list">
    <%= render 'book_list' %>
  </div>
</div>