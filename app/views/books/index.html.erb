<%= render "shared/header" %>
<div class='main'>
  <%# 商品一覧 %>
  <div class='item-contents'>
    <%= link_to '', "#", class: "subtitle" %>
    <ul class='item-lists'>
      <% @books.each do |book| %>
        <li class='list'>
         <%= link_to image_tag(book['mediumImageUrl']) do%>
            <div class='item-img-content'>
            </div>
            <div class='item-info'>
            <%= link_to (image_tag(book.mediumImageUrl)), book['itemUrl'] , class: "subtitle"%>
            </div>
              <h3 class='item-name'>
             <%= link_to (book.title), book_path(book.id), method: :get, class: "subtitle" %>
              </h3>
          <% end %>
        </li>
      <% end %>

    </ul>
  </div>
  <%# /商品一覧 %>

</div>
<%= link_to(new_book_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>本を検索</span>
  <%= image_tag 'search.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>


<%= render "shared/footer" %>

